<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<title>Manage Books</title>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

<!-- Navigation -->
<nav class="navbar navbar-dark bg-dark">
  <div class="container-fluid">
    <span class="navbar-brand mb-0 h1">Bookstore Admin</span>
    <a href="/admin/dashboard" class="btn btn-outline-light btn-sm ms-2">Dashboard</a>
    <a href="/admin/products" class="btn btn-outline-light btn-sm ms-2">Manage Books</a>
    <a href="/admin/reports" class="btn btn-outline-light btn-sm ms-2">Reports</a>
    <a href="/logout" class="btn btn-outline-light btn-sm ms-auto">Logout</a>
  </div>
</nav>

<div class="container mt-5">

  <!-- Server Error Alert -->
  <% if (error) { %>
    <div class="alert alert-danger alert-dismissible fade show" role="alert" id="serverError">
      <strong>Error:</strong> <%= error %>
      <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
  <% } %>

  <div id="jsErrorContainer"></div>

  <h3 class="mb-4">Add / Update Book</h3>

  <!-- Add Book Form -->
  <form id="addBookForm" class="row g-3 mb-4" action="/admin/products/add" method="POST">
    <div class="col-md-3">
      <label class="form-label">ISBN</label>
      <input type="text" class="form-control" name="isbn">
    </div>
    <div class="col-md-5">
      <label class="form-label">Title</label>
      <input type="text" class="form-control" name="title">
    </div>
    <div class="col-md-2">
      <label class="form-label">Stock</label>
      <input type="number" class="form-control" name="stock">
    </div>
    <div class="col-md-2">
      <label class="form-label">Threshold</label>
      <input type="number" class="form-control" name="threshold">
    </div>
    <div class="col-md-3">
      <label class="form-label">Category</label>
      <select class="form-select" name="category">
        <option value="">Select Category</option>
        <option value="Science">Science</option>
        <option value="Art">Art</option>
        <option value="Religion">Religion</option>
        <option value="History">History</option>
        <option value="Geography">Geography</option>
      </select>
    </div>
    <div class="col-md-3">
      <label class="form-label">Selling Price</label>
      <input type="number" step="0.01" class="form-control" name="selling_price">
    </div>

    <!-- Author Dropdown -->
    <div class="col-md-4">
  <label class="form-label">Authors</label>
  <div class="border p-2" style="max-height:150px; overflow-y:auto;">
    <% authors.forEach(a => { %>
      <div class="form-check">
        <input class="form-check-input" type="checkbox" name="author_id[]" value="<%= a.Author_ID %>" id="author_<%= a.Author_ID %>">
        <label class="form-check-label" for="author_<%= a.Author_ID %>">
          <%= a.Author_Name %>
        </label>
      </div>
    <% }) %>
  </div>
</div>
    <!-- Publisher Dropdown -->
    <div class="col-md-4">
      <label class="form-label">Publisher</label>
      <select class="form-select" name="publisher_id">
        <option value="">Select Publisher</option>
        <% publishers.forEach(p => { %>
          <option value="<%= p.Publisher_ID %>"><%= p.Name %></option>
        <% }) %>
      </select>
    </div>

    <div class="col-12">
      <button type="submit" class="btn btn-success">Add Book</button>
    </div>
  </form>

  <!-- Search Form -->
  <form class="mb-4" action="/admin/products/search" method="GET">
    <div class="input-group w-50">
      <input type="text" class="form-control" name="query" placeholder="Search by ISBN, title, or category">
      <button class="btn btn-primary" type="submit">Search</button>
    </div>
  </form>

  <!-- Book Table -->
 <h4>Existing Books</h4>
<div class="table-responsive">
  <table class="table table-bordered table-hover align-middle">
    <thead class="table-light">
      <tr>
        <th>ISBN</th>
        <th>Title</th>
        <th>Stock</th>
        <th>Threshold</th>
        <th>Selling Price</th>
        <th>Category</th>
        <th>Author</th>
        <th>Publisher</th>
        <th>Status</th> <!-- NEW COLUMN -->
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <% books.forEach(book => { %>
      <tr>
        <td><%= book.ISBN %></td>
        <td><%= book.Title %></td>
        <td>
          <%= book.stock %>
          <!-- Show warning badge if below threshold -->
          <% if (book.stock < book.Threshold) { %>
            <span class="badge bg-danger ms-1">Low</span>
          <% } %>
        </td>
        <td><%= book.Threshold %></td>
        <td>$<%= book.selling_price %></td>
        <td><%= book.Category %></td>
        <td><%= book.authors %></td>
        <td><%= book.Publisher_Name %></td>
        
        <!-- NEW STATUS COLUMN -->
        <td>
          <% if (book.stock < book.Threshold) { %>
            <% if (orders.find(o => o.ISBN === book.ISBN && o.Status === 'Pending')) { %>
              <span class="badge bg-warning text-dark">Order Pending</span>
            <% } else { %>
              <span class="badge bg-info text-dark">Order Created</span>
            <% } %>
          <% } else { %>
            <span class="badge bg-success">OK</span>
          <% } %>
        </td>
        
        <td>
          <!-- Update Stock Form -->
          <form class="updateBookForm d-flex gap-2" action="/admin/products/update" method="POST">
            <input type="hidden" name="isbn" value="<%= book.ISBN %>">
            <input type="number" class="form-control form-control-sm stockInput" name="stock" placeholder="Stock">
            <button class="btn btn-sm btn-warning" type="submit">Update</button>
          </form>

          <!-- Confirm Order Button (only if pending order exists) -->
          <% if (orders.find(o => o.ISBN === book.ISBN && o.Status === 'Pending')) { %>
            <a href="/admin/orders/confirm/<%= book.ISBN %>" class="btn btn-sm btn-success mt-1">Confirm Order</a>
          <% } %>
        </td>
      </tr>
      <% }) %>
    </tbody>
  </table>
</div>

</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
<script>
  function showAlert(message, type='danger') {
    const container = document.getElementById('jsErrorContainer');
    container.innerHTML = `
      <div class="alert alert-${type} alert-dismissible fade show" role="alert">
        <strong>Error:</strong> ${message}
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
      </div>`;
  }

  // Add Book Validation
  document.getElementById('addBookForm').addEventListener('submit', function(e) {
    const form = e.target;
    const stock = parseInt(form.stock.value);
    const threshold = parseInt(form.threshold.value);
    const sellingPrice = parseFloat(form.selling_price.value);
    const category = form.category.value;
    const authorCheckboxes = form.querySelectorAll('input[name="author_id[]"]:checked');
    const publisher = form.publisher_id.value;

    if (!form.isbn.value || !form.title.value || !category || isNaN(stock) || isNaN(sellingPrice) || isNaN(threshold) || authorCheckboxes.length === 0 || !publisher) {
      e.preventDefault();
      showAlert('All fields are required and must be valid.');
      return;
    }

    if (stock < 0) {
      e.preventDefault();
      showAlert('Stock must be 0 or more.');
      return;
    }

    if (threshold <= 0) {
      e.preventDefault();
      showAlert('Threshold must be greater than 0.');
      return;
    }

    if (sellingPrice <= 0) {
      e.preventDefault();
      showAlert('Selling price must be positive.');
      return;
    }

    const allowedCategories = ['Science','Art','Religion','History','Geography'];
    if (!allowedCategories.includes(category)) {
      e.preventDefault();
      showAlert('Category must be one of the predefined options.');
      return;
    }
  });

  // Update Stock Validation
  document.querySelectorAll('.updateBookForm').forEach(form => {
    form.addEventListener('submit', function(e) {
      const stockInput = form.querySelector('.stockInput');
      const stock = parseInt(stockInput.value);
      if (isNaN(stock)) {
        e.preventDefault();
        showAlert('Stock is required.');
        return;
      }
      if (stock < 0) {
        e.preventDefault();
        showAlert('Stock cannot be negative.');
        return;
      }
    });
  });
</script>

</body>
</html>

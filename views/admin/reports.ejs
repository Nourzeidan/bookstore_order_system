
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Admin Reports</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

<nav class="navbar navbar-dark bg-dark">
  <div class="container-fluid">
    <span class="navbar-brand">Admin – Reports</span>
    <a href="/admin/dashboard" class="btn btn-outline-light btn-sm ms-2">Dashboard</a>
    <a href="/admin/products" class="btn btn-outline-light btn-sm ms-2">Manage Books</a>
  </div>
</nav>

<div class="container mt-5">
  <h3 class="mb-4">Sales Reports</h3>

  <!-- Total Sales -->
  <div class="card mb-4">
    <div class="card-body">
      <h5 class="card-title">Total Sales – Previous Month</h5>
      <p class="card-text">Amount: <strong><%= totalSalesMonth %></strong></p>
    </div>
  </div>

  <!-- Top Customers -->
  <h4 class="mt-5">Top Customers (Last 3 Months)</h4>
  <div class="table-responsive mb-4">
    <table class="table table-striped table-bordered align-middle">
      <thead class="table-light">
        <tr>
          <th>Customer</th>
          <th>Total Purchases</th>
        </tr>
      </thead>
      <tbody>
        <% if (topCustomers.length === 0) { %>
          <tr>
            <td colspan="2" class="text-center text-muted">No data</td>
          </tr>
        <% } %>

        <% topCustomers.forEach(c => { %>
          <tr>
            <td><%= c.name %></td>
            <td><%= c.total %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>

  <!-- Top Selling Books -->
  <h4 class="mt-5">Top Selling Books (Last 3 Months)</h4>
  <div class="table-responsive mb-4">
    <table class="table table-striped table-bordered align-middle">
      <thead class="table-light">
        <tr>
          <th>ISBN</th>
          <th>Title</th>
          <th>Copies Sold</th>
        </tr>
      </thead>
      <tbody>
        <% if (topBooks.length === 0) { %>
          <tr>
            <td colspan="3" class="text-center text-muted">No data</td>
          </tr>
        <% } %>

        <% topBooks.forEach(b => { %>
          <tr>
            <td><%= b.isbn %></td>
            <td><%= b.title %></td>
            <td><%= b.sold %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>

</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Admin Reports</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

<!-- Navigation -->
<nav class="navbar navbar-dark bg-dark">
  <div class="container-fluid">
    <span class="navbar-brand mb-0 h1">Bookstore Admin</span>
    <a href="/admin/dashboard" class="btn btn-outline-light btn-sm ms-2">Dashboard</a>
    <a href="/admin/products" class="btn btn-outline-light btn-sm ms-2">Manage Books</a>
    <a href="/admin/reports" class="btn btn-outline-light btn-sm ms-2">Reports</a>
    <a href="/logout" class="btn btn-outline-light btn-sm ms-auto">Logout</a>
  </div>
</nav>

<div class="container mt-5">

  <h3 class="mb-4">System Reports</h3>

  <!-- ============================= -->
  <!-- Total Sales â€“ Previous Month -->
  <!-- ============================= -->
  <div class="card mb-4">
    <div class="card-body">
      <h5 class="card-title">Total Sales (Previous Month)</h5>
      <p class="card-text">
        Amount: <strong><%= totalSalesMonth %></strong>
      </p>
    </div>
  </div>

  <!-- ================================= -->
  <!-- Total Sales on a Specific Day -->
  <!-- ================================= -->
  <div class="card mb-4">
    <div class="card-body">
      <h5 class="card-title">Total Sales on a Specific Day</h5>

      <form method="GET" action="/admin/reports" class="row g-2 align-items-end">
        <div class="col-md-4">
          <label class="form-label">Select Date</label>
          <input type="date" name="date" class="form-control" value="<%= selectedDate %>">
        </div>
        <div class="col-md-2">
          <button class="btn btn-primary">Get Sales</button>
        </div>
      </form>

      <% if (totalSalesDate !== null) { %>
        <p class="mt-3">
          <strong>Total Sales:</strong> <%= totalSalesDate %>
        </p>
      <% } %>
    </div>
  </div>

  <!-- ================================= -->
  <!-- Top 5 Customers -->
  <!-- ================================= -->
  <h4 class="mt-5">Top 5 Customers (Last 3 Months)</h4>
  <div class="table-responsive mb-4">
    <table class="table table-striped table-bordered align-middle">
      <thead class="table-light">
        <tr>
          <th>Customer Name</th>
          <th>Total Purchase Amount</th>
        </tr>
      </thead>
      <tbody>
        <% topCustomers.forEach(c => { %>
          <tr>
            <td><%= c.name %></td>
            <td><%= c.total %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>

  <!-- ================================= -->
  <!-- Top 10 Selling Books -->
  <!-- ================================= -->
  <h4 class="mt-5">Top Selling Books (Last 3 Months)</h4>
  <div class="table-responsive mb-4">
    <table class="table table-striped table-bordered align-middle">
      <thead class="table-light">
        <tr>
          <th>ISBN</th>
          <th>Title</th>
          <th>Copies Sold</th>
        </tr>
      </thead>
      <tbody>
        <% topBooks.forEach(b => { %>
          <tr>
            <td><%= b.isbn %></td>
            <td><%= b.title %></td>
            <td><%= b.sold %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>

  <!-- ================================= -->
  <!-- Number of Times a Book Was Ordered -->
  <!-- ================================= -->
  <div class="card mb-5">
    <div class="card-body">
      <h5 class="card-title">Number of Times a Book Was Ordered</h5>

      <form method="GET" action="/admin/reports" class="row g-2 align-items-end">
        <div class="col-md-4">
          <label class="form-label">Enter Book ISBN</label>
          <input type="text" name="isbn" class="form-control"
                 placeholder="ISBN" value="<%= searchedISBN %>">
        </div>
        <div class="col-md-2">
          <button class="btn btn-secondary">Check</button>
        </div>
      </form>

      <% if (bookOrdersCount !== null) { %>
        <p class="mt-3">
          <strong>Times Ordered:</strong> <%= bookOrdersCount %>
        </p>
      <% } %>
    </div>
  </div>

</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

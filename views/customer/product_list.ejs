<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Available Books</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-4">
        <div class="container">
            <a class="navbar-brand" href="#"> BookStore</a>
            <div class="ms-auto">
                <a href="/customer/cart" class="btn btn-outline-light btn-sm me-2">View Cart</a>
                <a href="/customer/profile" class="btn btn-outline-light btn-sm me-2">Profile</a>
                <a href="/logout" class="btn btn-danger btn-sm">Logout</a>
            </div>
        </div>
    </nav>

    <div class="container">
        <h1 class="text-center mb-4">Available Books</h1>

        <div class="row">
            <% books.forEach(book => { %>
                <div class="col-md-4 mb-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title"><%= book.Title || book.title %></h5>
                            <p class="card-text text-muted mb-1">Category: <%= book.Category || 'General' %></p>
                            <h6 class="text-primary mb-3">$<%= book.Selling_Price || book.price %></h6>
                            
                            <div class="mt-auto">
                                <p class="small <%= (book.Quantity_In_Stock || book.stock) > 0 ? 'text-success' : 'text-danger' %>">
                                    Stock: <%= book.Quantity_In_Stock || book.stock %>
                                </p>
                                
                                <form method="POST" action="/customer/cart/add/<%= book.ISBN || book.isbn %>">
                                    <div class="d-grid">
                                        <button type="submit" 
                                                class="btn <%= (book.Quantity_In_Stock || book.stock) > 0 ? 'btn-primary' : 'btn-secondary' %>"
                                                <% if((book.Quantity_In_Stock || book.stock) <= 0) { %> disabled <% } %>>
                                            <%= (book.Quantity_In_Stock || book.stock) > 0 ? 'Add to Cart' : 'Out of Stock' %>
                                        </button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
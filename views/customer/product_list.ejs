<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Available Books</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-4">
        <div class="container">
            <a class="navbar-brand" href="#">ðŸ“š BookStore</a>
            <div class="ms-auto">
                <a href="/customer/cart" class="btn btn-outline-light btn-sm me-2">View Cart</a>
                <a href="/customer/profile" class="btn btn-outline-light btn-sm me-2">Profile</a>
                <a href="/logout" class="btn btn-danger btn-sm">Logout</a>
            </div>
        </div>
    </nav>

    <div class="container">
        <h1 class="text-center mb-4">Available Books</h1>

        <div class="row justify-content-center mb-5">
            <div class="col-md-8">
                <form action="/customer/products/search" method="GET">
                    <div class="input-group shadow-sm">
                        <input type="text" 
                               class="form-control form-control-lg" 
                               name="query" 
                               placeholder="Search by Title, ISBN, Category, Author..." 
                               value="<%= typeof searchQuery !== 'undefined' ? searchQuery : '' %>">
                        <button class="btn btn-primary px-4" type="submit">Search</button>
                        <% if (typeof searchQuery !== 'undefined' && searchQuery) { %>
                            <a href="/customer/product_list" class="btn btn-outline-secondary">Clear</a>
                        <% } %>
                    </div>
                </form>
                <% if (typeof searchQuery !== 'undefined' && searchQuery) { %>
                    <p class="mt-2 text-muted">Showing results for: <strong>"<%= searchQuery %>"</strong></p>
                <% } %>
            </div>
        </div>
        <div class="row">
            <% if(books.length === 0) { %>
                <div class="text-center py-5">
                    <h3>No books found.</h3>
                    <a href="/customer/product_list" class="btn btn-link">View all available books</a>
                </div>
            <% } %>

            <% books.forEach(book => { %>
                <div class="col-md-4 mb-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title"><%= book.Title || book.title %></h5>
                            <p class="card-text text-muted mb-1">Author: <%= book.Author || 'Unknown' %></p>
                            <p class="card-text text-muted mb-1 small">Category: <%= book.Category || 'General' %></p>
                            <h6 class="text-primary mb-3">$<%= book.Selling_Price || book.price %></h6>
                            
                            <div class="mt-auto">
                                <p class="small <%= (book.Quantity_In_Stock || book.stock) > 0 ? 'text-success' : 'text-danger' %>">
                                    Stock: <%= book.Quantity_In_Stock || book.stock %>
                                </p>
                                
                                <form method="POST" action="/customer/cart/add/<%= book.ISBN || book.isbn %>">
                                    <div class="d-grid">
                                        <button type="submit" 
                                                class="btn <%= (book.Quantity_In_Stock || book.stock) > 0 ? 'btn-primary' : 'btn-secondary' %>"
                                                <% if((book.Quantity_In_Stock || book.stock) <= 0) { %> disabled <% } %>>
                                            <%= (book.Quantity_In_Stock || book.stock) > 0 ? 'Add to Cart' : 'Out of Stock' %>
                                        </button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Shopping Cart</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-4">
        <div class="container">
            <a class="navbar-brand" href="#">ðŸ“š BookStore</a>
            <div class="ms-auto">
                <a href="/customer/product_list" class="btn btn-outline-light btn-sm me-2">Back to Books</a>
                <a href="/customer/profile" class="btn btn-outline-light btn-sm me-2">Profile</a>
                <a href="/logout" class="btn btn-danger btn-sm">Logout</a>
            </div>
        </div>
    </nav>

    <div class="container">
        <h1 class="h3 mb-4">Your Shopping Cart</h1>

        <% if(cart.length === 0) { %>
            <div class="alert alert-info text-center py-5 shadow-sm">
                <h4>Your cart is empty</h4>
                <p class="text-muted">Looks like you haven't added any books yet.</p>
                <a href="/customer/product_list" class="btn btn-primary mt-2">Browse Books</a>
            </div>
        <% } else { %>
            <div class="row">
                <div class="col-lg-8">
                    <div class="card shadow-sm mb-4">
                        <div class="table-responsive">
                            <table class="table table-borderless align-middle mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th class="ps-4">Product</th>
                                        <th>Price</th>
                                        <th>Quantity</th>
                                        <th>Subtotal</th>
                                        <th class="text-end pe-4">Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% let total = 0; %>
                                    <% cart.forEach(item => { %>
                                        <% total += item.price * item.quantity; %>
                                        <tr>
                                            <td class="ps-4">
                                                <span class="fw-bold"><%= item.title %></span>
                                                <br><small class="text-muted">ISBN: <%= item.isbn %></small>
                                            </td>
                                            <td>$<%= item.price %></td>
                                            <td>
                                                <span class="badge bg-secondary px-3 py-2"><%= item.quantity %></span>
                                            </td>
                                            <td class="fw-bold">$<%= item.price * item.quantity %></td>
                                            <td class="text-end pe-4">
                                                <form method="POST" action="/customer/cart/remove/<%= item.isbn %>" class="d-inline">
                                                    <button type="submit" class="btn btn-outline-danger btn-sm">Remove</button>
                                                </form>
                                            </td>
                                        </tr>
                                    <% }) %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

                <div class="col-lg-4">
                    <div class="card shadow-sm border-primary">
                        <div class="card-header bg-primary text-white py-3">
                            <h5 class="card-title mb-0">Order Summary</h5>
                        </div>
                        <div class="card-body">
                            <div class="d-flex justify-content-between mb-2">
                                <span>Items:</span>
                                <span><%= cart.length %></span>
                            </div>
                            <hr>
                            <div class="d-flex justify-content-between mb-4">
                                <span class="h5">Total:</span>
                                <span class="h5 text-primary">$<%= total %></span>
                            </div>
                            <div class="d-grid gap-2">
                                <a href="/customer/checkout" class="btn btn-success btn-lg">Proceed to Checkout</a>
                                <a href="/customer/product_list" class="btn btn-link btn-sm text-secondary text-decoration-none">Continue Shopping</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        <% } %>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
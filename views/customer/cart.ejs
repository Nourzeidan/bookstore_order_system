<!DOCTYPE html>
<html>
<head>
    <title>Your Cart</title>
</head>
<body>
    <h1>Shopping Cart</h1>
    <a href="/customer/product_list">Back to Books</a> | 
    <a href="/customer/profile">Profile</a> | 
    <a href="/logout">Logout</a>

    <% if(cart.length === 0) { %>
        <p>Your cart is empty.</p>
    <% } else { %>
        <ul>
        <% let total = 0; %>
        <% cart.forEach(item => { %>
            <% total += item.price * item.quantity; %>
            <li>
                <strong><%= item.title %></strong> - $<%= item.price %> x <%= item.quantity %> = $<%= item.price * item.quantity %>
                <form method="POST" action="/customer/cart/remove/<%= item.isbn %>" style="display:inline;">
                    <button type="submit">Remove</button>
                </form>
            </li>
        <% }) %>
        </ul>
        <p><strong>Total: $<%= total %></strong></p>
        <a href="/customer/checkout">Proceed to Checkout</a>
    <% } %>
</body>
</html>
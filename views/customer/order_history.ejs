<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Order History</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-4">
        <div class="container">
            <a class="navbar-brand" href="#">ðŸ“š BookStore</a>
            <div class="ms-auto">
                <a href="/customer/product_list" class="btn btn-outline-light btn-sm me-2">Back to Books</a>
                <a href="/customer/profile" class="btn btn-outline-light btn-sm me-2">Profile</a>
                <a href="/logout" class="btn btn-danger btn-sm">Logout</a>
            </div>
        </div>
    </nav>

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-10">
                <div class="card shadow-sm">
                    <div class="card-header bg-white py-3">
                        <h2 class="h4 mb-0">Your Order History</h2>
                    </div>
                    <div class="card-body">
                        <% if(orders.length === 0) { %>
                            <div class="alert alert-info text-center">
                                <p class="mb-0">You have no past orders yet. Start shopping to see your history!</p>
                            </div>
                        <% } else { %>
                            <div class="table-responsive">
                                <table class="table table-hover align-middle">
                                    <thead class="table-light">
                                        <tr>
                                            <th>Order ID</th>
                                            <th>Date</th>
                                            <th>Total Price</th>
                                            <th>Status</th>
                                            <th class="text-end">Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% orders.forEach(order => { %>
                                            <tr>
                                                <td><span class="fw-bold">#<%= order.Order_ID %></span></td>
                                                <td>
                                                    <%= new Date(order.Order_Date).toLocaleDateString('en-US', { 
                                                        year: 'numeric', 
                                                        month: 'short', 
                                                        day: 'numeric' 
                                                    }) %>
                                                </td>
                                                <td>$<%= parseFloat(order.Total_Price).toFixed(2) %></td>
                                                <td>
                                                    <% 
                                                        let badgeColor = 'bg-warning';
                                                        if (order.Status === 'Completed' || order.Status === 'Delivered') {
                                                            badgeColor = 'bg-success';
                                                        } else if (order.Status === 'Cancelled') {
                                                            badgeColor = 'bg-danger';
                                                        }
                                                    %>
                                                    <span class="badge rounded-pill <%= badgeColor %> text-white">
                                                        <%= order.Status %>
                                                    </span>
                                                </td>
                                                <td class="text-end">
                                                    <a href="/customer/orders/<%= order.Order_ID %>" 
                                                       class="btn btn-primary btn-sm">View Details</a>
                                                </td>
                                            </tr>
                                        <% }) %>
                                    </tbody>
                                </table>
                            </div>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

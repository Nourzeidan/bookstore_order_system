<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Order Details</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-4">
        <div class="container">
            <a class="navbar-brand" href="#">üìö BookStore</a>
            <div class="ms-auto">
                <a href="/customer/order_history" class="btn btn-outline-light btn-sm me-2">Back to Orders</a>
                <a href="/customer/product_list" class="btn btn-outline-light btn-sm me-2">Shop</a>
                <a href="/logout" class="btn btn-danger btn-sm">Logout</a>
            </div>
        </div>
    </nav>

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-10">
                <div class="card shadow-sm mb-4">
                    <div class="card-header bg-white py-3">
                        <h2 class="h4 mb-0">Order #<%= order.Order_ID %></h2>
                    </div>
                    <div class="card-body">
                        <!-- Order Info -->
                        <div class="row mb-4">
                            <div class="col-md-4">
                                <p class="text-muted mb-1">Order Date</p>
                                <p class="fw-bold">
                                    <%= new Date(order.Order_Date).toLocaleDateString('en-US', { 
                                        year: 'numeric', 
                                        month: 'long', 
                                        day: 'numeric' 
                                    }) %>
                                </p>
                            </div>
                            <div class="col-md-4">
                                <p class="text-muted mb-1">Status</p>
                                <p>
                                    <% 
                                        let badgeColor = 'bg-warning';
                                        if (order.Status === 'Completed' || order.Status === 'Delivered') {
                                            badgeColor = 'bg-success';
                                        } else if (order.Status === 'Cancelled') {
                                            badgeColor = 'bg-danger';
                                        }
                                    %>
                                    <span class="badge <%= badgeColor %>"><%= order.Status %></span>
                                </p>
                            </div>
                            <div class="col-md-4">
                                <p class="text-muted mb-1">Total</p>
                                <p class="fw-bold text-success fs-5">$<%= parseFloat(order.Total_Price).toFixed(2) %></p>
                            </div>
                        </div>

                        <hr>

                        <!-- Order Items -->
                        <h5 class="mb-3">Order Items</h5>
                        
                        <% if (items && items.length > 0) { %>
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <thead class="table-light">
                                        <tr>
                                            <th>Book</th>
                                            <th>Author</th>
                                            <th class="text-center">Quantity</th>
                                            <th class="text-end">Price</th>
                                            <th class="text-end">Subtotal</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% items.forEach(item => { %>
                                            <tr>
                                                <td>
                                                    <strong><%= item.Title %></strong><br>
                                                    <small class="text-muted">ISBN: <%= item.ISBN %></small>
                                                </td>
                                                <td><%= item.Author_Name %></td>
                                                <td class="text-center"><%= item.Quantity %></td>
                                                <td class="text-end">$<%= parseFloat(item.Price).toFixed(2) %></td>
                                                <td class="text-end fw-bold">$<%= parseFloat(item.Subtotal).toFixed(2) %></td>
                                            </tr>
                                        <% }); %>
                                    </tbody>
                                    <tfoot>
                                        <tr class="table-light">
                                            <td colspan="4" class="text-end fw-bold">Total:</td>
                                            <td class="text-end fw-bold text-success fs-5">
                                                $<%= parseFloat(order.Total_Price).toFixed(2) %>
                                            </td>
                                        </tr>
                                    </tfoot>
                                </table>
                            </div>
                        <% } else { %>
                            <div class="alert alert-warning">
                                No items found in this order.
                            </div>
                        <% } %>

                        <div class="mt-4">
                            <a href="/customer/order_history" class="btn btn-primary">‚Üê Back to Order History</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>